<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>daftar contact</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">tambah kontak</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
    </div>
    <table class="table table-dark table-striped-columns">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">nama</th>
          <th scope="col">noHP</th>
          <th scope="col">aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length === 0) { %>
        <tr>
          <td colspan="4">
            <div class="alert alert-danger" role="alert">data contact masikosong!</div>
          </td>
        </tr>
        <% } %> <% contacts.forEach((contact, i) => { i++ %>
        <tr>
          <th scope="row"><%= i++ %></th>
          <td><%= contact.nama %></td>
          <td><%= contact.noHP %></td>
          <td>
            <a href="/contact/<%= contact.nama %>" class="btn btn-outline-primary"><i class="bi bi-info-circle"></i>detail</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
